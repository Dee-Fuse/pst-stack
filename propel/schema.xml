<database name="default" defaultIdMethod="native"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="http://xsd.propelorm.org/1.6/database.xsd"
          namespace="App\Models"
        >

    <behavior name="timestampable"/>

    <table name="user" phpName="User">
        <column name="id" type="integer" required="true" primaryKey="true" autoIncrement="true"/>
        <column name="first_name" type="varchar" size="255" required="true" phpName="FirstName"/>
        <column name="last_name" type="varchar" size="255" required="true" phpName="LastName"/>
        <column name="email" type="varchar" size="255" required="true" phpName="Email"/>
        <column name="password" type="varchar" size="255" required="true" phpName="Password"/>
        <column name="uuid" type="varchar" size="255" required="true" phpName="UUID"/>
    </table>

</database>