{% extends 'templates/admin-layout.twig' %}

{% block content %}
    <div id="page-wrapper">
        <div id="content-wrapper">
            {% include "templates/partials/flash.twig" %}

            <div class="panel panel-{{ errors ? 'danger' : 'default' }}">
                <div class="panel-heading">
                    <h3 class="panel-title">Edit user</h3>
                </div>
                <form action="{{ path_for('admin.users.edit', {id: user.id}) }}" method="post">
                    <div class="panel-body">
                        <fieldset>
                            <div class="row">
                                <div class="form-group col-md-6{{ errors.firstName ? ' has-error' : '' }}">
                                    <label class="control-label" for="firstName">First Name</label>
                                    <input name="firstName" type="text" class="form-control" id="firstName"
                                           placeholder="First Name" value="{{ old.firstName ? old.firstName : user.firstName }}" autofocus>
                                    {% if errors.firstName %}
                                        <span class="help-block">{{ errors.firstName | first }}</span>
                                    {% endif %}
                                </div>
                                <div class="form-group col-md-6{{ errors.lastName ? ' has-error' : '' }}">
                                    <label class="control-label" for="lastName">Last Name</label>
                                    <input name="lastName" type="text" class="form-control" id="lastName"
                                           placeholder="Last Name" value="{{ old.lastName ? old.lastName : user.lastName }}">
                                    {% if errors.lastName %}
                                        <span class="help-block">{{ errors.lastName | first }}</span>
                                    {% endif %}
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-md-6{{ errors.email ? ' has-error' : '' }}">
                                    <label class="control-label" for="email">E-Mail-Address</label>
                                    <input name="email" type="text" class="form-control" id="email"
                                           placeholder="E-Mail-Address" value="{{ old.email ? old.email : user.email }}">
                                    {% if errors.email %}
                                        <span class="help-block">{{ errors.email | first }}</span>
                                    {% endif %}
                                </div>
                            </div>
                            {{ csrf.field | raw }}
                            <input type="hidden" name="_METHOD" value="PATCH">
                        </fieldset>
                    </div>
                    <div class="panel-footer">
                        <button type="submit" name="commit" class="btn btn-success">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    </div>
{% endblock %}