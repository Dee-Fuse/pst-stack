{% extends 'templates/main-layout.twig' %}

{% block content %}

    {% include "templates/partials/flash.twig" %}

    <div class="row">
        <div class="col-md-offset-4 col-md-4">
            <h3>Change password</h3>
            <hr>
            <form action="{{ path_for('auth.password.change') }}" method="post">
                <div class="form-group{{ errors.password_old ? ' has-error' : '' }}">
                    <label for="password_old">Current password</label>
                    <input name="password_old" type="password" class="form-control" id="password_old" placeholder="Current Password" value="{{ old.password_old }}" autofocus>
                    {% if errors.password_old %}
                        <span class="help-block">{{ errors.password_old | first }}</span>
                    {% endif %}
                </div>
                <div class="form-group{{ errors.password ? ' has-error' : '' }}">
                    <label for="password">New Password</label>
                    <input name="password" type="password" class="form-control" id="password" placeholder="New Password" value="{{ old.password }}">
                    {% if errors.password %}
                        <span class="help-block">{{ errors.password | first }}</span>
                    {% endif %}
                </div>
                <button type="submit" class="btn btn-default login-button">Change password</button>
                {{ csrf.field | raw }}
            </form>
        </div>
    </div>

{% endblock %}