{% extends 'templates/main-layout.twig' %}

{% block content %}

    <div class="container">
        {% include "templates/partials/flash.twig" %}

        <div class="row">
            <div class="col-md-offset-3 col-md-6">
                <div class="login-panel panel panel-{{ errors ? 'danger' : 'default' }}">
                    <div class="panel-heading">
                        <h3 class="panel-title">Profile</h3>
                    </div>
                    <div class="panel-body">
                        <dl class="dl-horizontal">
                            <dt><strong>First Name:</strong></dt>
                            <dd>{{ user.firstName }}</dd>
                            <dt><strong>Last Name:</strong></dt>
                            <dd>{{ user.lastName }}</dd>
                            <dt><strong>E-Mail-Address:</strong></dt>
                            <dd>{{ user.email }}</dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}